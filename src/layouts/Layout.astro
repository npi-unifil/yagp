---
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

interface Props {
	title?: string;
}

const { title = 'NPI Unifil - Núcleo de Práticas Interdisciplinares' } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content="Núcleo de Práticas Interdisciplinares da Universidade Filadélfia" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style is:global>
			@tailwind base;
			@tailwind components;
			@tailwind utilities;

			html {
				scroll-behavior: smooth;
			}

			body {
				@apply bg-white text-gray-900 font-sans;
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
